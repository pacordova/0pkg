# r
openblas=(https://github.com/xianyi/OpenBLAS/releases/download/v0.3.21/OpenBLAS-0.3.21.tar.gz CMAKE -DBUILD_SHARED_LIBS=ON)
r=(https://cran.r-project.org/src/base/R-4/R-4.2.1.tar.gz CONFIGURE --disable-java --without-recommended-packages --without-x --with-blas=openblas --with-lapack)

# fonts
ttf-liberation=(https://github.com/liberationfonts/liberation-fonts/archive/refs/tags/2.1.5.tar.gz MAKE)

# qt
qtbase=(https://invent.kde.org/qt/qt/qtbase/-/archive/v5.15.5-lts-lgpl/qtbase-v5.15.5-lts-lgpl.tar.gz CONFIGURE --extprefix=$destdir$PREFIX --libdir=$LIBDIR --archdatadir=$LIBDIR/qt --datadir=$PREFIX/share/qt --docdir=$PREFIX/share/doc/qt --opensource --confirm-license --optimize-size --nomake=examples --nomake=tests)
qtsvg=(https://invent.kde.org/qt/qt/qtsvg/-/archive/v5.15.5-lts-lgpl/qtsvg-v5.15.5-lts-lgpl.tar.gz QMAKE)
qttools=(https://invent.kde.org/qt/qt/qttools/-/archive/v5.15.5-lts-lgpl/qttools-v5.15.5-lts-lgpl.tar.gz QMAKE)
qtx11extras=(https://invent.kde.org/qt/qt/qtx11extras/-/archive/v5.15.5-lts-lgpl/qtx11extras-v5.15.5-lts-lgpl.tar.gz QMAKE)
qtdeclarative=(https://invent.kde.org/qt/qt/qtdeclarative/-/archive/v5.15.5-lts-lgpl/qtdeclarative-v5.15.5-lts-lgpl.tar.gz QMAKE)
botan=(https://botan.randombit.net/releases/Botan-2.19.2.tar.xz CONFIGURE)
libqrencode=(https://fukuchi.org/works/qrencode/qrencode-4.1.1.tar.bz2 CONFIGURE)
keepassxc=(https://github.com/keepassxreboot/keepassxc/releases/download/2.7.1/keepassxc-2.7.1-src.tar.xz CMAKE -DWITH_XC_DOCS=OFF -DWITH_APP_BUNDLE=OFF)

# gtk
murrine=(https://download.gnome.org/sources/murrine/0.98/murrine-0.98.2.tar.xz CONFIGURE)
ahoviewer=(https://github.com/ahodesuka/ahoviewer/archive/refs/tags/1.6.5.tar.gz AUTORECONF)
file-roller=(https://download.gnome.org/sources/file-roller/3.40/file-roller-3.40.0.tar.xz MESON)
leafpad=(https://github.com/tarot231/leafpad/archive/master.tar.gz AUTOTOOLS)
pavucontrol=(ce2b72c3b5f1a70ad0df19dd81750f9455bd20870d1d3a36d20536af2e8f4e7https://freedesktop.org/software/pulseaudio/pavucontrol/pavucontrol-5.0.tar.xz CONFIGURE)
transmission=(https://github.com/transmission/transmission/releases/download/3.00/transmission-3.00.tar.xz CONFIGURE)

# evince
poppler-data=(https://poppler.freedesktop.org/poppler-data-0.4.11.tar.gz CMAKE)
poppler=(https://poppler.freedesktop.org/poppler-22.02.0.tar.xz CMAKE -DENABLE_QT5=OFF -DENABLE_BOOST=OFF)
libhandy=(https://download.gnome.org/sources/libhandy/1.7/libhandy-1.7.90.tar.xz MESON -Dexamples=false -Dtests=false -Dvapi=false)
evince=(https://github.com/GNOME/evince/archive/refs/tags/43.0.tar.gz MESON -Dsystemduserunitdir=no -Dnautilus=false -Duser_doc=false -Dgtk_doc=false -Dpdf=enabled)

# ffmpeg
libx264=(https://code.videolan.org/videolan/x264/-/archive/master/x264-master.tar.bz2 CONFIGURE --enable-shared --disable-cli --bit-depth=10)
ffmpeg=(https://ffmpeg.org/releases/ffmpeg-5.1.tar.xz CONFIGURE --enable-shared --enable-libvpx --enable-gpl --enable-libx264); dirflags=(--libdir=$LIBDIR --disable-static)

# mpv
libass=(https://github.com/libass/libass/releases/download/0.15.2/libass-0.15.2.tar.xz CONFIGURE)
mpv=(https://github.com/mpv-player/mpv/archive/refs/tags/v0.34.1.tar.gz WAF)

# feh
imlib2=(https://downloads.sourceforge.net/enlightenment/imlib2-1.8.0.tar.xz CONFIGURE)
feh=(https://feh.finalrewind.org/feh-3.8.tar.bz2 MAKE)

# misc 
firejail=(https://sourceforge.net/projects/firejail/files/firejail/firejail-0.9.70.tar.xz/download CONFIGURE)
bspwm=(https://github.com/baskerville/bspwm/archive/refs/tags/0.9.10.tar.gz MAKE)
dmenu=(https://dl.suckless.org/tools/dmenu-5.1.tar.gz MAKE)
sxhkd=(https://github.com/baskerville/sxhkd/archive/refs/tags/0.6.2.tar.gz MAKE)
