# build-systems
autoconf=(https://ftp.gnu.org/gnu/autoconf/autoconf-2.69.tar.xz CONFIGURE)
automake=(https://ftp.gnu.org/gnu/automake/automake-1.15.1.tar.xz CONFIGURE)
cmake=(https://github.com/Kitware/CMake/releases/download/v3.24.1/cmake-3.24.1.tar.gz CONFIGURE); dirflags=()

# libraries
elfutils=(https://sourceware.org/ftp/elfutils/0.187/elfutils-0.187.tar.bz2 CONFIGURE --disable-debuginfod --disable-libdebuginfod)
libinih=(https://github.com/benhoyt/inih/archive/r53/inih-r53.tar.gz MESON)
liburcu=(https://lttng.org/files/urcu/userspace-rcu-0.13.1.tar.bz2 CONFIGURE)
openblas=(https://github.com/xianyi/OpenBLAS/releases/download/v0.3.21/OpenBLAS-0.3.21.tar.gz CMAKE -DBUILD_SHARED_LIBS=ON)

# languages
lua=(https://lua.org/ftp/lua-5.4.4.tar.gz MAKE INSTALL_TOP=$destdir$PREFIX INSTALL_LIB=$destdir$LIBDIR INSTALL_CMOD=$destdir$LIBDIR/lua MYCFLAGS=$CFLAGS)
r=(https://cran.r-project.org/src/base/R-4/R-4.2.1.tar.gz CONFIGURE --disable-java --without-recommended-packages --without-x --with-blas=openblas --with-lapack)
ruby=(https://cache.ruby-lang.org/pub/ruby/3.0/ruby-3.0.3.tar.gz CONFIGURE)

# compression
unzip=(https://downloads.sourceforge.net/infozip/unzip60.tar.gz MAKE --file=unix/Makefile prefix=$destdir/$PREFIX generic)
zip=(https://downloads.sourceforge.net/infozip/zip30.tar.gz MAKE --file=unix/Makefile prefix=$destdir/$PREFIX generic_gcc)

# linux
xfsprogs=(https://kernel.org/pub/linux/utils/fs/xfs/xfsprogs/xfsprogs-5.14.2.tar.xz MAKE)

# misc
htop=(https://github.com/htop-dev/htop/releases/download/3.2.1/htop-3.2.1.tar.xz CONFIGURE)
nano=(https://ftp.gnu.org/gnu/nano/nano-6.3.tar.xz CONFIGURE)
rsync=(https://samba.org/ftp/rsync/src/rsync-3.2.3.tar.gz CONFIGURE --disable-lz4 --disable-xxhash --disable-md2man)
