# toolchain
m4=(https://ftp.gnu.org/gnu/m4/m4-1.4.19.tar.xz CONFIGURE)
bash=(https://ftp.gnu.org/gnu/bash/bash-5.2.15.tar.gz CONFIGURE --libdir=$LIBDIR --without-bash-malloc)
coreutils=(https://ftp.gnu.org/gnu/coreutils/coreutils-9.1.tar.xz CONFIGURE --enable-no-install-program=kill,uptime FORCE_UNSAFE_CONFIGURE=1)
diffutils=(https://ftp.gnu.org/gnu/diffutils/diffutils-3.9.tar.xz CONFIGURE)
findutils=(https://ftp.gnu.org/gnu/findutils/findutils-4.9.0.tar.xz CONFIGURE --localstatedir=/var)
gawk=(https://ftp.gnu.org/gnu/gawk/gawk-5.2.1.tar.xz CONFIGURE --libdir=$LIBDIR --sysconfdir=/etc)
grep=(https://ftp.gnu.org/gnu/grep/grep-3.9.tar.xz CONFIGURE)
make=(https://ftp.gnu.org/gnu/make/make-4.4.1.tar.gz CONFIGURE)
patch=(https://ftp.gnu.org/gnu/patch/patch-2.7.6.tar.xz CONFIGURE)
sed=(https://ftp.gnu.org/gnu/sed/sed-4.9.tar.xz CONFIGURE)
tar=(https://ftp.gnu.org/gnu/tar/tar-1.34.tar.xz CONFIGURE FORCE_UNSAFE_CONFIGURE=1)
xz=(https://tukaani.org/xz/xz-5.4.1.tar.gz CONFIGURE --libdir=$LIBDIR)
rc=(https://github.com/pacordova/rc/archive/refs/tags/0.1.tar.gz MAKE)

# pkg-config
pkgconf=(https://distfiles.dereferenced.org/pkgconf/pkgconf-1.9.4.tar.xz CONFIGURE --libdir=$LIBDIR)

# compression
zlib=(https://zlib.net/fossils/zlib-1.2.13.tar.gz CONFIGURE --libdir=$LIBDIR)
pigz=(https://zlib.net/pigz/pigz-2.7.tar.gz MAKE)
bzip2=(https://sourceware.org/pub/bzip2/bzip2-1.0.8.tar.gz MAKE PREFIX=$destdir$PREFIX LIBDIR=$LIBDIR)
zstd=(https://github.com/facebook/zstd/releases/download/v1.5.4/zstd-1.5.4.tar.gz MAKE LIBDIR=$LIBDIR)
unzip=(https://downloads.sourceforge.net/infozip/unzip60.tar.gz MAKE --file=unix/Makefile prefix=$destdir$PREFIX generic)
zip=(https://downloads.sourceforge.net/infozip/zip30.tar.gz MAKE --file=unix/Makefile prefix=$destdir$PREFIX generic_gcc)

# python3 
libressl=(https://ftp.openbsd.org/pub/OpenBSD/LibreSSL/libressl-3.6.2.tar.gz CONFIGURE --libdir=$LIBDIR --sysconfdir=/etc --enable-nc)
libffi=(https://github.com/libffi/libffi/releases/download/v3.4.4/libffi-3.4.4.tar.gz CONFIGURE --libdir=$LIBDIR --with-gcc-arch=x86-64)
python3=(https://python.org/ftp/python/3.10.6/Python-3.10.6.tgz CONFIGURE --with-platlibdir=lib64 --enable-shared --without-ensurepip)

# glibc
bison=(https://ftp.gnu.org/gnu/bison/bison-3.8.2.tar.xz CONFIGURE --libdir=$LIBDIR)
glibc=(https://ftp.gnu.org/gnu/glibc/glibc-2.35.tar.xz CONFIGURE2 --libdir=$LIBDIR --sysconfdir=/etc --localstatedir=/var --disable-werror --enable-kernel=3.2 --enable-stack-protector=strong --with-headers=/usr/include libc_cv_slibdir=$LIBDIR)

# perl
perl=(https://github.com/Perl/perl5/archive/refs/tags/v5.36.0.tar.gz CONFIGURE --prefix=$PREFIX -Dinstallstyle=lib64/perl5 -Dman1dir=/usr/share/man/man1 -Dman3dir=/usr/share/man/man3 -Dusethreads)

# gcc
texinfo=(https://ftp.gnu.org/gnu/texinfo/texinfo-7.0.2.tar.xz CONFIGURE --libdir=$LIBDIR)
binutils=(https://ftp.gnu.org/gnu/binutils/binutils-2.40.tar.xz CONFIGURE --libdir=$LIBDIR --sysconfdir=/etc --enable-deterministic-archives)
gmp=(https://ftp.gnu.org/gnu/gmp/gmp-6.1.0.tar.xz CONFIGURE --libdir=$LIBDIR --enable-cxx)
mpfr=(https://ftp.gnu.org/gnu/mpfr/mpfr-3.1.6.tar.xz CONFIGURE --libdir=$LIBDIR --enable-thread-safe)
libmpc=(https://ftp.gnu.org/gnu/mpc/mpc-1.0.3.tar.gz CONFIGURE --libdir=$LIBDIR)
gcc=(https://ftp.gnu.org/gnu/gcc/gcc-11.3.0/gcc-11.3.0.tar.xz CONFIGURE --libdir=$LIBDIR --disable-multilib --disable-bootstrap --enable-languages=c,c++,fortran)

# build tools
autoconf=(https://ftp.gnu.org/gnu/autoconf/autoconf-2.71.tar.xz CONFIGURE)
automake=(https://ftp.gnu.org/gnu/automake/automake-1.16.5.tar.xz CONFIGURE)
cmake=(https://github.com/Kitware/CMake/releases/download/v3.25.3/cmake-3.25.3.tar.gz CONFIGURE)
ninja=(https://github.com/ninja-build/ninja/archive/v1.11.1/ninja-1.11.1.tar.gz CMAKE)

# additional tools
bc=(https://github.com/gavinhoward/bc/releases/download/6.4.0/bc-6.4.0.tar.xz CONFIGURE --disable-generated-tests)
e2fsprogs=(https://kernel.org/pub/linux/kernel/people/tytso/e2fsprogs/v1.46.5/e2fsprogs-1.46.5.tar.xz CONFIGURE --libdir=$LIBDIR --sysconfdir=/etc --enable-elf-shlibs --disable-^(libblkid libuuid uuidd fsck))
flex=(https://github.com/westes/flex/releases/download/v2.6.4/flex-2.6.4.tar.gz CONFIGURE --libdir=$LIBDIR)
gettext=(https://ftp.gnu.org/gnu/gettext/gettext-0.21.1.tar.xz CONFIGURE --libdir=$LIBDIR)
gperf=(https://ftp.gnu.org/gnu/gperf/gperf-3.1.tar.gz CONFIGURE)
iana-etc=(https://github.com/Mic92/iana-etc/releases/download/20230202/iana-etc-20230202.tar.gz)
shadow=(https://github.com/shadow-maint/shadow/releases/download/4.13/shadow-4.13.tar.xz CONFIGURE --libdir=$LIBDIR --sysconfdir=/etc --with-group-name-max-length=32)
util-linux=(https://kernel.org/pub/linux/utils/util-linux/v2.38/util-linux-2.38.1.tar.xz CONFIGURE --libdir=$LIBDIR --disable-^(chfn-chsh login nologin su setpriv runuser pylibmount) --without-^(python systemd systemdsystemunitdir))

# libraries
acl=(https://download.savannah.gnu.org/releases/acl/acl-2.3.1.tar.xz CONFIGURE --libdir=$LIBDIR)
attr=(https://download.savannah.gnu.org/releases/attr/attr-2.5.1.tar.gz CONFIGURE --libdir=$LIBDIR --sysconfdir=/etc)
eudev=(https://github.com/eudev-project/eudev/releases/download/v3.2.11/eudev-3.2.11.tar.gz CONFIGURE --libdir=$LIBDIR --sysconfdir=/etc)
expat=(https://prdownloads.sourceforge.net/expat/expat-2.5.0.tar.xz CONFIGURE --libdir=$LIBDIR)
file=(https://astron.com/pub/file/file-5.44.tar.gz CONFIGURE --libdir=$LIBDIR)
json-c=(https://s3.amazonaws.com/json-c_releases/releases/json-c-0.16.tar.gz CMAKE)
libaio=(https://ftp.debian.org/debian/pool/main/liba/libaio/libaio_0.3.113.orig.tar.gz MAKE libdir=$LIBDIR)
libcap2=(https://kernel.org/pub/linux/libs/security/linux-privs/libcap2/libcap-2.67.tar.xz MAKE LIBDIR=$LIBDIR)
libcheck=(https://github.com/libcheck/check/releases/download/0.15.2/check-0.15.2.tar.gz CONFIGURE --libdir=$LIBDIR)
libevent=(https://github.com/libevent/libevent/releases/download/release-2.1.12-stable/libevent-2.1.12-stable.tar.gz CONFIGURE --libdir=$LIBDIR)
libpsl=(https://github.com/rockdaboot/libpsl/releases/download/0.21.2/libpsl-0.21.2.tar.gz CONFIGURE --libdir=$LIBDIR)
libusb=(https://github.com/libusb/libusb/releases/download/v1.0.26/libusb-1.0.26.tar.bz2 CONFIGURE --libdir=$LIBDIR)
lvm2=(https://sourceware.org/ftp/lvm2/LVM2.2.03.19.tgz CONFIGURE --with-usrlibdir=$LIBDIR --sysconfdir=/etc)
ncurses=(https://invisible-island.net/archives/ncurses/ncurses-6.4.tar.gz CONFIGURE --libdir=$LIBDIR --with-shared --without-cxx --enable-pc-files --enable-widec)
pcre2=(https://github.com/PhilipHazel/pcre2/releases/download/pcre2-10.42/pcre2-10.42.tar.bz2 CONFIGURE --libdir=$LIBDIR --enable-unicode --enable-pcre2-16 --enable-pcre2-32)
pcre=(https://sourceforge.net/projects/pcre/files/pcre/8.45/pcre-8.45.tar.bz2 CONFIGURE --libdir=$LIBDIR --enable-unicode-properties --enable-pcre16 --enable-pcre32)
popt=(http://ftp.rpm.org/popt/releases/popt-1.x/popt-1.19.tar.gz CONFIGURE --libdir=$LIBDIR)
readline=(https://ftp.gnu.org/gnu/readline/readline-8.2.tar.gz CONFIGURE --libdir=$LIBDIR --with-curses)

# system-software
acpid2=(https://downloads.sourceforge.net/acpid2/acpid-2.0.34.tar.xz CONFIGURE)
alsa-lib=(https://alsa-project.org/files/pub/lib/alsa-lib-1.2.8.tar.bz2 CONFIGURE --libdir=$LIBDIR)
alsa-utils=(https://alsa-project.org/files/pub/utils/alsa-utils-1.2.8.tar.bz2 CONFIGURE --libdir=$LIBDIR --localstatedir=/var --disable-^(alsaconf bat xmlto) --with-curses=ncursesw)
cron=(https://ftp.isc.org/isc/cron/cron_4.1.shar MAKE)
cryptsetup=(https://kernel.org/pub/linux/utils/cryptsetup/v2.6/cryptsetup-2.6.1.tar.xz CONFIGURE --libdir=$LIBDIR --disable-ssh-token --disable-asciidoc)
dosfstools=(https://github.com/dosfstools/dosfstools/releases/download/v4.2/dosfstools-4.2.tar.gz CONFIGURE --enable-compat-symlinks)
efibootmgr=(https://github.com/rhboot/efibootmgr/archive/18/efibootmgr-18.tar.gz MAKE EFIDIR=/boot)
efivar=(https://github.com/rhboot/efivar/releases/download/38/efivar-38.tar.bz2 MAKE LIBDIR=$LIBDIR)
git=(https://kernel.org/pub/software/scm/git/git-2.39.2.tar.xz CONFIGURE)
kbd=(https://kernel.org/pub/linux/utils/kbd/kbd-2.5.1.tar.xz CONFIGURE --disable-vlock --disable-tests)
kmod=(https://kernel.org/pub/linux/utils/kernel/kmod/kmod-30.tar.xz CONFIGURE --libdir=$LIBDIR)
less=(https://ftp.gnu.org/gnu/less/less-608.tar.gz CONFIGURE)
lua=(https://lua.org/ftp/lua-5.4.4.tar.gz MAKE INSTALL_TOP=$destdir$PREFIX INSTALL_LIB=$destdir$LIBDIR INSTALL_CMOD=$destdir$LIBDIR/lua MYCFLAGS=$CFLAGS)
man-pages=(https://kernel.org/pub/linux/docs/man-pages/man-pages-6.03.tar.xz MAKE install DESTDIR=$destdir)
mandoc=(https://mandoc.bsd.lv/snapshots/mandoc-1.14.6.tar.gz CONFIGURE)
openssh=(https://ftp3.usa.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-9.2p1.tar.gz CONFIGURE --sysconfdir=/etc --localstatedir=/var)
parted=(https://ftp.gnu.org/gnu/parted/parted-3.5.tar.xz CONFIGURE --libdir=$LIBDIR)
pciutils=(https://kernel.org/pub/software/utils/pciutils/pciutils-3.9.0.tar.xz MAKE)
procps-ng=(https://sourceforge.net/projects/procps-ng/files/Production/procps-ng-3.3.17.tar.xz CONFIGURE --libdir=$LIBDIR --disable-kill)
psmisc=(https://sourceforge.net/projects/psmisc/files/psmisc/psmisc-23.6.tar.xz CONFIGURE)
sudo=(https://sudo.ws/dist/sudo-1.9.13.tar.gz CONFIGURE --sysconfdir=/etc --localstatedir=/var)
tmux=(https://github.com/tmux/tmux/releases/download/3.3a/tmux-3.3a.tar.gz CONFIGURE)
tzdata=(https://github.com/eggert/tz/archive/refs/tags/2022g.tar.gz MAKE)
usbutils=(https://www.kernel.org/pub/linux/utils/usb/usbutils/usbutils-015.tar.xz CONFIGURE)
vim=(https://anduin.linuxfromscratch.org/LFS/vim-9.0.1273.tar.xz CONFIGURE);srcdir=()
which=(https://ftp.gnu.org/gnu/which/which-2.21.tar.gz CONFIGURE)

# network
curl=(https://github.com/curl/curl/releases/download/curl-7_88_1/curl-7.88.1.tar.xz CONFIGURE --libdir=$LIBDIR --with-openssl --enable-threaded-resolver --with-ca-path=/etc/ssl/certs --with-ca-bundle=/etc/ssl/certs/ca-certificates.crt)
dhcpcd=(https://roy.marples.name/downloads/dhcpcd/dhcpcd-9.4.1.tar.xz CONFIGURE --libdir=$LIBDIR --sysconfdir=/etc --localstatedir=/var --libexecdir=$LIBDIR/dhcpcd --dbdir=/var/lib/dhcpcd)
iproute2=(https://kernel.org/pub/linux/utils/net/iproute2/iproute2-6.2.0.tar.xz MAKE LIBDIR=$LIBDIR)
iputils=(https://github.com/iputils/iputils/archive/refs/tags/20221126.tar.gz MESON -DBUILD_MANS=false)
dbus=(https://dbus.freedesktop.org/releases/dbus/dbus-1.15.4.tar.xz CONFIGURE --libdir=$LIBDIR --sysconfdir=/etc --localstatedir=/var --enable-user-session --with-systemduserunitdir=no --with-systemdsystemunitdir=no --with-system-socket=/run/dbus/system_bus_socket)
iwd=(https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-2.3.tar.xz CONFIGURE --localstatedir=/var --disable-systemd-service LIBS=-lncursesw)

# extra
htop=(https://github.com/htop-dev/htop/releases/download/3.2.2/htop-3.2.2.tar.xz CONFIGURE)
gnupg1=(https://gnupg.org/ftp/gcrypt/gnupg/gnupg-1.4.23.tar.bz2 CONFIGURE --enable-noexecstack)
libarchive=(https://github.com/libarchive/libarchive/releases/download/v3.6.0/libarchive-3.6.0.tar.xz CONFIGURE)
tcsh=(https://astron.com/pub/tcsh/tcsh-6.24.07.tar.gz CONFIGURE)
lm-sensors=(https://github.com/lm-sensors/lm-sensors/archive/V3-6-0/lm-sensors-3-6-0.tar.gz MAKE LIBDIR=$LIBDIR)
xorriso=(https://ftp.gnu.org/gnu/xorriso/xorriso-1.5.4.tar.gz CONFIGURE)
elfutils=(https://sourceware.org/ftp/elfutils/0.189/elfutils-0.189.tar.bz2 CONFIGURE --disable-debuginfod --disable-libdebuginfod)
time=(https://ftp.gnu.org/gnu/time/time-1.9.tar.gz CONFIGURE)
